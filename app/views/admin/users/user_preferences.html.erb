<% @page_title="Preferences" %>

<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<h2 class="h2-flush-top"><%=@page_title%></h2>
			</div>
			<div class="col-lg-7">
				<%= render "user_nav" %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-4">

				<% if @user.errors.any? %>
				<div class='status error' id="flashmsg" tabindex="0">
				<h3>The form did not process due to the <%= pluralize(@user.errors.count, "error") %> below:</h3>
				<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
				</div><br><br>
				<% end %>

				<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %> alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<%= value %>
				</div>
				<% end %>
				
				<%= form_for @user, url: user_profile_update_path, method: 'post', class:'form' do |f| %>
				<fieldset>
					<legend>Preferences</legend>
					
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :firstname, "Username", class:"control-label" %>
						<%= f.text_field :firstname, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :email, "Email", class:"control-label" %>
						<%= f.text_field :email, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>

				<hr>
				<div class="row form-group">
					<div class="col-md-1"></div>
					<div class="col-md-10" align="right">
						<%= f.submit "Save", :class => "btn btn-default" %>
					</div>
					<div class="col-md-1"></div>
				</div>
				<% end -%>
				<br><br><br><br>
			</div>

			<div class="col-lg-2"></div>

			<div class="col-lg-4">
				
				<%= form_for @user, url: user_profile_path(@user), class:'form' do |f| %>
				<fieldset>
					<legend>General Information</legend>
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :created_at, "Created", class:"control-label" %>
						<%= f.text_field :created_at, value: @user.created_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :updated_at, "Updated", class:"control-label" %>
						<%= f.text_field :updated_at, value: @user.updated_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :last_sign_in_at, "Last Sign-In", class:"control-label" %>
						<%= f.text_field :last_sign_in_at, value: @user.lastsignin_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>
				<% end -%>
				<br><br><br><br>
			</div>
			<div class="col-lg-1"></div>
		</div>
    </div>
</section>
<!-- END / SECTION 1 -->