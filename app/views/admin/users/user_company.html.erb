<% @page_title="Company" %>
<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<h2 class="h2-flush-top"><%=@page_title%></h2>
			</div>
			<div class="col-lg-7">
				<%= render "layouts/nav" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-5">

				<%= render "layouts/message_error", pg_obj: @company %>
				<%= render "layouts/message_flash" %>

				<%= form_for @company, url: user_company_update_path, method: 'post', class:'form' do |f| %>

				<fieldset>
					<legend>Company Information</legend>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
							<%= f.label :name, "Name", class:"control-label" %>
							<%= f.text_field :name, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
							<%= f.label :description, "Description", class:"control-label" %>
							<%= f.text_field :description, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-8">
							<%= f.label :address, "Address", class:"control-label" %>
							<%= f.text_field :address, class:"form-control" %>
						</div>
						<div class="col-md-2">
							<%= f.label :apt, "Apt/Suite", class:"control-label" %>
							<%= f.text_field :apt, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>

				<hr>
				<div class="row form-group">
					<div class="col-md-1"></div>
					<div class="col-md-10" align="right">
						<%= f.submit "Save", :class => "btn btn-default" %>
					</div>
					<div class="col-md-1"></div>
				</div>
				<% end -%>
				<br><br><br><br>
			</div>

			<div class="col-lg-1"></div>

			<div class="col-lg-4">

				<%= form_for @company, url: user_company_path(@company), class:'form' do |f| %>
				<fieldset>
					<legend>General Information</legend>
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :created_at, "Created", class:"control-label" %>
						<%= f.text_field :created_at, value: @company.created_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :updated_at, "Updated", class:"control-label" %>
						<%= f.text_field :updated_at, value: @company.updated_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>
				<% end -%>
				<br><br><br><br>
			</div>
			<div class="col-lg-1"></div>
		</div>
    </div>
</section>
<!-- END / SECTION 1 -->
<script>
var auto_complete_id = "company_address"; //global var for initAutoComplete()
</script>
<%= javascript_include_tag "googlemap-auto-complete" %>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAsCilLl4Pts-_BVVKJLoR_PCC7OmQsRcA&libraries=places&callback=initAutoComplete"></script>
