<% @page_title="Profile" %>

<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<h2 class="h2-flush-top"><%=@page_title%></h2>
			</div>
			<div class="col-lg-7">
				<%= render "user_nav" %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-4">

				<%= render "layouts/error_message" %>
				<%= render "layouts/error_flash" %>
				
				<%= form_for @user, url: user_profile_update_path, method: 'post', class:'form' do |f| %>
				<fieldset>
					<legend>Personal Information (private)</legend>
					<div><span class="help-block">These information are private and will not be shared.</span></div><br>
					
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-4">
							<%= f.label :firstname, "First Name", class:"control-label" %>
							<%= f.text_field :firstname, class:"form-control" %>
						</div>
						<div class="col-md-2">
							<%= f.label :middleinit, "Middle Init.", class:"control-label" %>
							<%= f.text_field :middleinit, class:"form-control" %>
						</div>
						<div class="col-md-4">
							<%= f.label :lastname, "Last Name", class:"control-label" %>
							<%= f.text_field :lastname, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
							<%= f.label :address1, "Address 1", class:"control-label" %>
							<%= f.text_field :address1, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
							<%= f.label :address2, "Address 2", class:"control-label" %>
							<%= f.text_field :address2, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-5">
							<%= f.label :city, "City", class:"control-label" %>
							<%= f.text_field :city, class:"form-control" %>
						</div>
						<div class="col-md-2">
							<%= f.label :state_id, "State", class:"control-label" %>
							<%= f.select :state_id, options_from_collection_for_select(State.all, :id, :abbr, @user.state_id), {}, {title: "States", class: "form-control"} %>
						</div>
						<div class="col-md-3">
							<%= f.label :zipcode, "Zipcode", class:"control-label" %>
							<%= f.text_field :zipcode, class:"form-control" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>

				<hr>
				<div class="row form-group">
					<div class="col-md-1"></div>
					<div class="col-md-10" align="right">
						<%= f.submit "Save", :class => "btn btn-default" %>
					</div>
					<div class="col-md-1"></div>
				</div>
				<% end -%>
				<br><br><br><br>
			</div>

			<div class="col-lg-2"></div>

			<div class="col-lg-4">
				
				<%= form_for @user, url: user_profile_path(@user), class:'form' do |f| %>
				<fieldset>
					<legend>General Information</legend>
					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :created_at, "Created", class:"control-label" %>
						<%= f.text_field :created_at, value: @user.created_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :updated_at, "Updated", class:"control-label" %>
						<%= f.text_field :updated_at, value: @user.profile_updated_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>

					<div class="row form-group">
						<div class="col-md-1"></div>
						<div class="col-md-10">
						<%= f.label :last_sign_in_at, "Last Sign-In", class:"control-label" %>
						<%= f.text_field :last_sign_in_at, value: @user.lastsignin_at_formatted, class:"form-control", readonly:"readonly" %>
						</div>
						<div class="col-md-1"></div>
					</div>
				</fieldset>
				<% end -%>
				<br><br><br><br>
			</div>
			<div class="col-lg-1"></div>
		</div>
    </div>
</section>
<!-- END / SECTION 1 -->
