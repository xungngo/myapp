<!-- LOGIN -->
<section id="login-content" class="login-content">
    <div class="awe-parallax bg-login-content"></div>
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="row">

            <!-- FORM -->
            <div class="col-xs-12 col-lg-4 pull-right">
                <div class="form-login">
                    <div id="message" class="message"></div>
                    <form id="login_form">
                        <h2 class="text-uppercase">sign in</h2>
                        <div class="form-email">
                            <input type="text" name="email" id="email" placeholder="Email" maxlength="100">
                        </div>
                        <div class="form-password">
                            <input type="password" name="password_digest" id="password_digest" placeholder="Password" maxlength="100">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" name="remember" id="remember">
                            <label for="check">
                            <i class="icon md-check-2"></i>
                            Remember me</label>
                            <a href="forgot">Forget password?</a>
                        </div>
                        <div class="form-submit-1">
                            <input type="button" name="login" id="login" value="Sign In" class="mc-btn btn-style-1">
                        </div>
                        <div class="link">
                            <a href="register">
                                <i class="icon md-arrow-right"></i>Donâ€™t have account yet ? Join Us
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END / FORM -->

            <!--div class="image">
                <img src="images/homeslider/img-thumb.png" alt="">
            </div-->

        </div>
    </div>
</section>
<!-- END / LOGIN -->

<!-- Load jQuery & Other Scripts -->
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<script>
$(document).ready(function() {
    $("#login").click(function(){
      submitLogin();
    });
  });

function submitLogin() {      
    var form_params = $("#login_form").serialize();
    $.ajax({
      type: "GET",
      url: "login_result",
      data: form_params,
      cache: false,
      dataType: "json",
      success: function(data) {
        msg = data[0].message
        if (msg == 'success'){
          goto = data[0].goto
          window.location = "http://localhost:3333/" + goto;
        } else {
          $("#message").css('display', 'block');
          $("#message").text(msg);
        }
      },
      error: function() {
        //alert("Request Error! Please refresh the page.")
      }
    });
  };

  <% if @logoff %>
    $("#message").css("display", "block");
    $("#message").text("<%= @logoff %>");
  <% end %>

  <% if params[:registered] %>
    $("#message").css("display", "block");
    $("#message").text("Thank you for registering. An email validation was sent to you. Please click on the validation link.");
  <% end %>
</script>