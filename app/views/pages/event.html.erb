<% @page_title="#{@event.name}" %>
<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="text-uppercase"><%=@page_title%></h2>
        </div>
      </div><br><br>

      <%= form_for @event, url: user_security_update_path, method: 'post', class:'form' do |f| %>
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-5">
          <fieldset>
            <legend>Description</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%= @event.description %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>

          <fieldset>
            <legend>Requirement</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%=@event.requirement %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>

          <fieldset>
            <legend>Event Type</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%=@event.eventtype.name %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>

          <fieldset>
            <legend>Attendee Type</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%=@event.eventattendeetype.name %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>

          <fieldset>
            <legend>Cost</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%=@event.price %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset>
        </div>

        <div class="col-lg-5">
          <fieldset>
            <legend>Organizer</legend>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%= @event.organization.name %>
              </div>
              <div class="col-md-1"></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%= @event.organization.contact %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>

          <fieldset>
            <legend>Schedule</legend>
            <div class="row form-group">
              <div class="col-md-1"></div>
              <div class="col-md-10">
              <%= @event.created_at %>
              </div>
              <div class="col-md-1"></div>
            </div>
          </fieldset><br>
        </div>
        <div class="col-lg-1"></div>
      </div><br>

      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10" align="center">
          <hr><br>
          <%= f.submit " APPLY ", :class => "btn btn-default" %>
        </div>
        <div class="col-md-1"></div>
      </div>
      <br><br><br><br><br><br><br>
      <% end -%>

    </div>
</section>
<!-- END / SECTION 1 -->