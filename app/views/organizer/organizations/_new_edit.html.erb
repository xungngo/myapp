<%= form_for [:organizer, @organization] do |f| %>
<%= render "layouts/message_error_organizer", pg_obj: @organization %>
<%= render "layouts/message_flash" %>

<div class="row">
	<div class="col-lg-1"></div>
	<div class="col-lg-5">
		<fieldset>
			<legend>Organization Information</legend>
			<div><span class="help-block">Fill in the required fields and click the submit button to create an organization.</span></div><br>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :name, "Name <span class='required'>*</span>".html_safe, class: "control-label" %>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :address, "Address <span class='required'>*</span>".html_safe, class: "control-label" %>
					<%= f.text_field :address, class: "form-control", placeholder: "Enter a location" %>
					<div><span class="help-block">Provide an exact address or a general location.</span></div>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :contact, "Contact Information <span class='required'>*</span>".html_safe, class: "control-label" %>
					<%= f.text_area :contact, rows: "3", class: "form-control", placeholder: "- fullname\n- phone\n- email" %>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group checkbox_bigger">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.check_box :defaultorg, class: "form-check-input" %>
					<%= f.label :defaultorg, "Yes, this is the default organization.", class: "form-check-label" %>
				</div>

				<div class="col-md-1"></div>
			</div>
		</fieldset><br><br><br>
	</div>

	<div class="col-lg-5">
	</div>
	<div class="col-lg-1"></div>
</div>

<hr>
<div class="row form-group">
	<div class="col-md-1"></div>
	<div class="col-md-5">
		<%= link_to "<i class='glyphicon glyphicon-chevron-left'></i> Cancel".html_safe, organizer_organizations_path, :title =>"cancel & back to listings" %>
	</div>
	<div class="col-md-5" align="right">
		<%= f.submit "#{params[:action] == 'new' ? 'Submit' : 'Update'} Organization", class: "btn btn-default" %>
	</div>
	<div class="col-md-1"></div>
</div>
<% end -%>
<br><br><br><br>

<script>
var auto_complete_id = "organization_address"; //global var for initAutoComplete()
</script>
<%= javascript_include_tag "googlemap-auto-complete" %>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=GOOGLE_API_KEY%>&libraries=places&callback=initAutoComplete"></script>