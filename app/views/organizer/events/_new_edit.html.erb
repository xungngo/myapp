<%= form_for [:organizer, @event], class:'form' do |f| %>
<%= render "layouts/message_error_organizer" %>
<%= render "layouts/message_flash" %>

<div class="row">
	<div class="col-lg-1"></div>
	<div class="col-lg-5">
		<fieldset>
			<legend>Event Form</legend>
			<div><span class="help-block">Fill in the required fields and click the submit button to create an event.</span></div><br>
			
			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :name, "Name", class: "control-label" %>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :description, "Description", class: "control-label" %>
					<%= f.text_area :description, rows: "8", class: "form-control", placeholder: "Provide a detailed description of the event. An outline works well." %>
					<span class="help-block">Detailed description of the event such as an outline.</span>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :requirement, "Requirements", class:"control-label" %>
					<%= f.text_area :requirement, rows: "5", class: "form-control", placeholder: "- ID\n- laptop\n- dress-code" %>
					<span class="help-block">Such as: laptop, book, ID, or dress-code.</span>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :address, "Address", class: "control-label" %>
					<%= f.text_field :address, class: "form-control" %>
				</div>
				<div class="col-md-1"></div>
			</div>
			
			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :contact, "Contact", class: "control-label" %>
					<%= f.text_area :contact, rows: "3", class: "form-control", placeholder: "- fullname\n- phone\n- email" %>
				</div>
				<div class="col-md-1"></div>
			</div>

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :price, "Price (USD per person)", class: "control-label" %>
					<%= f.text_field :price, class: "form-control" %>
				</div>
				<div class="col-md-1"></div>
			</div>	

			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :eventtype_id, "Type<span class='required'>*</span>".html_safe, class: "control-label" %>
					<%= f.select :eventtype_id, options_from_collection_for_select(Eventtype.all, :id, :name, params[:eventtype_id]), {}, {title: "Event Types", class: "form-control"} %>
					<span class="help-block">Select the event type.</span>
				</div>
				<div class="col-md-1"></div>
			</div>
		</fieldset><br><br><br>
	</div>

	<div class="col-lg-5">
		<fieldset>
			<legend>Calendar</legend>
			<div><span class="help-block">Select the date range for this event.</span></div><br>
			
			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label 'start', "Start Date", class: "control-label" %>
					<input type="input" name="start" class="form-control">
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label 'end', "End Date", class: "control-label" %>
					<input type="input" name="end" class="form-control">
				</div>
				<div class="col-md-1"></div>
			</div>
		</fieldset><br><br><br>

		<fieldset>
			<legend>Attachments</legend>
			<div><span class="help-block">Upload up to 20 photos.</span></div><br>
			
			<div class="row form-group">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<%= f.label :attachments, "Attachment", class: "control-label" %>
					<%= f.text_field :attachments, class: "form-control" %>
				</div>
				<div class="col-md-1"></div>
			</div>
		</fieldset>
	</div>
	<div class="col-lg-1"></div>
</div>

<hr>
<div class="row form-group">
	<div class="col-md-1"></div>
	<div class="col-md-5">
		<%= link_to "<i class='glyphicon glyphicon-chevron-left'></i> Cancel".html_safe, organizer_events_path, :title =>"cancel & back to listings" %>
	</div>
	<div class="col-md-5" align="right">
		<%= f.submit "#{params[:action] == 'new' ? 'Submit' : 'Update'} Event", :class => "btn btn-default" %>
	</div>
	<div class="col-md-1"></div>
</div>
<% end -%>
<br><br><br><br>