<% @page_title="Events" %>

<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<h2 class="h2-flush-top"><%=@page_title%></h2>
			</div>
			<div class="col-lg-7">
				<%= render "layouts/nav" %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-10">
				<%= render "layouts/message_flash" %>
				<table class="table table-hover">
				<thead>
					<tr><td colspan="8" align="right"><%= link_to "<i class='glyphicon glyphicon-plus'></i> New Event".html_safe, new_organizer_event_path, :title =>"new event" %></td></tr>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Images</th>
						<th scope="col">Name</th>
						<th scope="col">Type</th>
						<th scope="col">Starts</th>
						<th scope="col">Status</th>
						<th scope="col">Created</th>
						<th scope="col" class="text-center">Option</th>
					</tr>
				</thead>
				<tbody>
				<% currentrow = 0 %>
				<% @events.each do |evt| %>
					<% currentrow = currentrow + 1 %>
					<tr scope="row">
						<td scope="row"><%= currentrow %></td>
						<td>
						<% if evt.attachments.first.present? %>
						<%= image_tag(evt.attachments.order(:sort).first.image.url(:thumb), :size => "40x40") %><br>
						<%= evt.attachments.size-1 %> more
						<% end %>
						</td>
						<td><%= evt.name %></td>
						<td><%= evt.eventtype.name %></td>
						<td><%= evt.eventdates.present? ? evt.eventdates.first.eventdate.strftime("%-m/%-d/%Y") : 'N/A' %></td>
						<td><%= evt.pretty_active %></td>
						<td><%= evt.created_at.strftime("%-m/%-d/%Y") %></td>
						<td class="text-center" style="width: 15%">
							<%= link_to "<i class='glyphicon glyphicon-edit'></i> Edit".html_safe, edit_organizer_event_path(evt), :title =>"edit #{evt.name}" %>&nbsp;&nbsp;&nbsp;&nbsp;
							<%= link_to "<i class='glyphicon glyphicon-ban-circle'></i> Deactivate".html_safe, organizer_event_status_path(evt), class: "event_status", id: evt.id, title: "deactivate #{evt.name}" %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
			</div>
			<div class="col-lg-1"></div>
		</div>
    </div>
</section>
<div id="modal-window" class="modal" title="Change Event Status" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<!-- END / SECTION 1 -->