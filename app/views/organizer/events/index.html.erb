<% @page_title="Events" %>

<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:30px 10px; 30px; 10px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<h2 class="h2-flush-top"><%=@page_title%></h2>
			</div>
			<div class="col-lg-7">
				<%= render "layouts/nav" %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-4">
				<%= render "layouts/message_flash" %>
				<table class="table table-hover">
				<thead>
					<tr><td colspan="13" align="right"><%= link_to "<i class='glyphicon glyphicon-plus'></i> New Event".html_safe, new_organizer_event_path, :title =>"new event" %></td></tr>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Type</th>
						<th scope="col" class="text-center">Status</th>
						<th scope="col" class="text-center">Option</th>
					</tr>
				</thead>
				<tbody>
				<% currentrow = 0 %>
				<% @events.each do |evt| %>
					<% currentrow = currentrow + 1 %>
					<tr scope="row">
						<td scope="row"><%= currentrow %></td>
						<td><%= evt.name %></td>
						<td><%= evt.eventtype.name %></td>
						<td class="text-center"><%= evt.pretty_active %></td>
						<td class="text-center"><%= link_to "<i class='glyphicon glyphicon-edit'></i> Edit".html_safe, edit_organizer_event_path(evt), :title =>"edit #{evt.name}" %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
			</div>

			<div class="col-lg-2"></div>

			<div class="col-lg-4">
				<!--goes here-->
			</div>
			<div class="col-lg-1"></div>
		</div>
    </div>
</section>
<!-- END / SECTION 1 -->