<!-- SECTION 1 -->
<section id="mc-section-1" class="mc-section-1 section" style="padding:5px 0px; 5px; 0px;">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3>
				<% if @status_change_message.include?('Successfully') %>
					<%= image_tag 'ok-icon.png', :size => "70x70" %>
				<% else %>
					<%= image_tag 'error-icon.png', :size => "70x70" %>
				<% end %>
				<%= @status_change_message %>
				</h3>
			</div>
		</div>
	</div>
</section>
<!-- END / SECTION 1 -->
